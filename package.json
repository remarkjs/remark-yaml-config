{
  "name": "remark-yaml-config",
  "version": "3.0.2",
  "description": "Configure remark with YAML front-matter",
  "license": "MIT",
  "keywords": [
    "yaml",
    "options",
    "config",
    "settings",
    "remark"
  ],
  "repository": "https://github.com/wooorm/remark-yaml-config",
  "bugs": "https://github.com/wooorm/remark-yaml-config/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "engines": {
    "node": ">=0.11.0"
  },
  "files": [
    "index.js"
  ],
  "dependencies": {
    "js-yaml": "^3.5.2"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "esmangle": "^1.0.0",
    "nyc": "^8.1.0",
    "remark": "^6.0.0",
    "remark-cli": "^2.0.0",
    "remark-html": "^5.0.1",
    "remark-preset-wooorm": "^1.0.0",
    "remark-usage": "^4.0.1",
    "tape": "^4.0.0",
    "unified": "^5.0.0",
    "xo": "^0.16.0"
  },
  "scripts": {
    "build-bundle": "browserify --no-builtins index.js -s remarkYAMLConfig > remark-yaml-config.js",
    "build-mangle": "esmangle remark-yaml-config.js > remark-yaml-config.min.js",
    "build-md": "remark . --quiet --frail",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test.js",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "rules": {
      "guard-for-in": "off",
      "no-eq-null": "off",
      "eqeqeq": "off"
    },
    "ignores": [
      "remark-yaml-config.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "presets": "wooorm",
    "plugins": [
      "usage"
    ]
  }
}

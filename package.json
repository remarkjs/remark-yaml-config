{
  "name": "remark-yaml-config",
  "version": "4.1.1",
  "description": "remark plugin to configure it with YAML frontmatter",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "mdast",
    "markdown",
    "yaml",
    "frontmatter",
    "options",
    "config",
    "settings"
  ],
  "repository": "remarkjs/remark-yaml-config",
  "bugs": "https://github.com/remarkjs/remark-yaml-config/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "js-yaml": "^3.5.2"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "remark": "^12.0.0",
    "remark-cli": "^8.0.0",
    "remark-frontmatter": "^2.0.0",
    "remark-html": "^11.0.0",
    "remark-preset-wooorm": "^7.0.0",
    "tape": "^5.0.0",
    "tinyify": "^2.0.0",
    "unified": "^9.0.0",
    "xo": "^0.32.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . --write && xo --fix",
    "build-bundle": "browserify . -s remarkYamlConfig > remark-yaml-config.js",
    "build-mangle": "browserify . -s remarkYamlConfig -p tinyify > remark-yaml-config.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off",
      "no-eq-null": "off",
      "eqeqeq": "off"
    },
    "ignores": [
      "remark-yaml-config.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
